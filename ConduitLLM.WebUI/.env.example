# Conduit API Configuration (Public - accessible from browser)
NEXT_PUBLIC_CONDUIT_ADMIN_API_URL=http://localhost:5002
NEXT_PUBLIC_CONDUIT_CORE_API_URL=http://localhost:5000

# Conduit API Configuration (Server-side - for Docker internal networking)
# In Docker, these would be http://api:8080 and http://admin:8080
CONDUIT_API_BASE_URL=http://localhost:5000
CONDUIT_ADMIN_API_BASE_URL=http://localhost:5002

# External URLs for SignalR connections (browser-accessible)
CONDUIT_API_EXTERNAL_URL=http://localhost:5000
CONDUIT_ADMIN_API_EXTERNAL_URL=http://localhost:5002

# Authentication
CONDUIT_MASTER_KEY=alpha
SESSION_SECRET=your-session-secret-key-change-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_SESSION_PREFIX=conduit:session:

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
PORT=3000

# SignalR Configuration
NEXT_PUBLIC_SIGNALR_AUTO_RECONNECT=true
NEXT_PUBLIC_SIGNALR_RECONNECT_INTERVAL=5000

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false