# Conduit API Configuration (Server-side - for Docker internal networking)
# In Docker, these would be http://api:8080 and http://admin:8080
CONDUIT_API_BASE_URL=http://localhost:5000
CONDUIT_ADMIN_API_BASE_URL=http://localhost:5002

# External URLs for SignalR connections (browser-accessible from server-side)
# These are used to tell browsers where to connect for real-time features
CONDUIT_API_EXTERNAL_URL=http://localhost:5000
CONDUIT_ADMIN_API_EXTERNAL_URL=http://localhost:5002

# Authentication
CONDUIT_API_TO_API_BACKEND_AUTH_KEY=alpha

# Clerk Authentication (Required for WebUI access)
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxxxx
CLERK_SECRET_KEY=sk_test_xxxxx

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development
PORT=3000

# SignalR Configuration
NEXT_PUBLIC_SIGNALR_AUTO_RECONNECT=true
NEXT_PUBLIC_SIGNALR_RECONNECT_INTERVAL=5000

# Feature Flags
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false
NEXT_PUBLIC_ENABLE_EXPERIMENTAL=false
NEXT_PUBLIC_ENABLE_VIDEO_PROGRESS_TRACKING=false

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# SignalR Advanced Configuration
SIGNALR_MAX_RECONNECT_ATTEMPTS=10
SIGNALR_KEEP_ALIVE_INTERVAL=15000

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=false

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1GB
CACHE_EVICTION_POLICY=LRU