@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using ConduitLLM.WebUI.Interfaces
@using ConduitLLM.WebUI.Services
@inject NavigationManager NavigationManager
@inject IInsecureModeProvider InsecureModeProvider
@inject IJSRuntime JSRuntime
@inject IToastService ToastService

<CascadingValue Value="this">
    <!-- No theme providers needed with standard Blazor -->
</CascadingValue>

<ToastContainer />

<div class="page-wrapper @(InsecureModeProvider.IsInsecureMode ? "has-security-banner" : "")">
    @if (InsecureModeProvider.IsInsecureMode)
    {
        <div class="warning-banner">
            <div class="insecure-mode-alert">
                <div class="insecure-mode-content">
                    <div class="insecure-mode-icon">
                        <i class="fa fa-exclamation-triangle"></i>
                    </div>
                    <div class="insecure-mode-text">
                        <div class="insecure-mode-title">
                            <strong>Security Warning</strong>
                        </div>
                        <div class="insecure-mode-message">
                            Conduit is running in Insecure Mode. Authentication is disabled. DO NOT expose this instance publicly.
                        </div>
                    </div>
                    <div class="insecure-mode-pulse"></div>
                </div>
            </div>
        </div>
    }

    <CircuitBreakerStatus />

    <div class="d-flex flex-column" style="min-height: 100vh;">    
        <div class="layout flex-grow-1">
        <!-- Modern Top Navigation Bar -->
        <header class="app-bar">
            <div class="app-bar-container">
                <!-- Left Side -->
                <div class="app-bar-left">
                    <div class="app-bar-brand">
                        <div class="app-bar-logo">
                            <i class="fa fa-bolt"></i>
                        </div>
                        <div class="app-bar-title-group">
                            <h6 class="app-bar-title">ConduitLLM</h6>
                            <span class="app-bar-subtitle">Admin Dashboard</span>
                        </div>
                    </div>
                </div>

                <!-- Right Side -->
                <div class="app-bar-right">
                    <!-- Notifications -->
                    <div class="app-bar-item">
                        <NotificationDisplay />
                    </div>
                    
                    <!-- System Health -->
                    <div class="app-bar-item">
                        <ConduitLLM.WebUI.Components.Shared.AdminApiHealthStatus />
                    </div>
                    
                    <!-- User Section -->
                    <CascadingAuthenticationState>
                        <AuthorizeView>
                            <Authorized>
                                <div class="app-bar-user">
                                    <div class="app-bar-user-info">
                                        <i class="fa fa-user-shield text-success"></i>
                                        <span class="app-bar-user-text">Admin</span>
                                    </div>
                                    <a href="/logout" class="app-bar-user-action" title="Sign Out">
                                        <i class="fa fa-sign-out-alt"></i>
                                    </a>
                                </div>
                            </Authorized>
                        </AuthorizeView>
                    </CascadingAuthenticationState>
                    
                    <!-- GitHub Link -->
                    <div class="app-bar-item">
                        <a href="https://github.com/knnlabs/Conduit" target="_blank" class="app-bar-external-link" title="View on GitHub">
                            <i class="fab fa-github"></i>
                        </a>
                    </div>
                </div>
            </div>
        </header>
        
        <!-- Side Navigation -->
        <div class="sidebar">
            <NavMenu />
        </div>
        
        <!-- Main Content Area -->
        <main class="main-content">
            <div class="main-content-inner">
                <ConduitLLM.WebUI.Components.Shared.DeprecationWarning />
                @Body
            </div>
        </main>
        </div>
    </div>
</div>

<!-- Modern Layout Styling -->
<style>
    /* Page wrapper for proper layout flow */
    .page-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        position: relative;
    }

    /* Global Layout */
    .layout {
        display: flex;
        flex-direction: column;
        position: relative;
        flex: 1;
    }

    /* Modern Insecure Mode Banner */
    .warning-banner {
        width: 100%;
        z-index: 1300;
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    .insecure-mode-alert {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        border-bottom: 2px solid rgba(245, 158, 11, 0.3);
        position: relative;
        overflow: hidden;
    }

    .insecure-mode-content {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.875rem 1.5rem;
        gap: 1rem;
        position: relative;
        z-index: 2;
    }

    .insecure-mode-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        border: 2px solid rgba(255, 255, 255, 0.3);
        animation: gentle-pulse-warning 2s ease-in-out infinite;
    }

    .insecure-mode-icon i {
        color: white;
        font-size: 1.125rem;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .insecure-mode-text {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        text-align: center;
    }

    .insecure-mode-title {
        color: white;
        font-size: 1rem;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .insecure-mode-message {
        color: rgba(255, 255, 255, 0.95);
        font-size: 0.875rem;
        font-weight: 500;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
        line-height: 1.4;
    }

    .insecure-mode-pulse {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        animation: warning-shimmer 3s ease-in-out infinite;
    }

    /* Warning Banner Animations */
    @@keyframes gentle-pulse-warning {
        0%, 100% { 
            transform: scale(1);
            box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
        }
        50% { 
            transform: scale(1.05);
            box-shadow: 0 0 25px rgba(255, 255, 255, 0.5);
        }
    }

    @@keyframes warning-shimmer {
        0% {
            left: -100%;
        }
        100% {
            left: 100%;
        }
    }

    /* Mobile responsiveness for warning banner */
    @@media screen and (max-width: 768px) {
        .insecure-mode-content {
            padding: 0.75rem 1rem;
            gap: 0.75rem;
        }

        .insecure-mode-icon {
            width: 32px;
            height: 32px;
        }

        .insecure-mode-icon i {
            font-size: 1rem;
        }

        .insecure-mode-title {
            font-size: 0.875rem;
        }

        .insecure-mode-message {
            font-size: 0.8125rem;
        }
    }

    @@media screen and (max-width: 480px) {
        .insecure-mode-content {
            flex-direction: column;
            gap: 0.5rem;
            padding: 0.75rem;
        }

        .insecure-mode-text {
            gap: 0.125rem;
        }

        .insecure-mode-message {
            font-size: 0.75rem;
        }
    }

    /* Modern App Bar */
    .app-bar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        height: 70px;
        display: flex;
        align-items: center;
        position: sticky;
        top: 0;
        left: 0;
        right: 0;
        z-index: 1000;
        box-shadow: 0 4px 20px rgba(102, 126, 234, 0.15);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    .has-security-banner .app-bar {
        top: 68px; /* Height of security banner */
    }

    .app-bar-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        padding: 0 1.5rem;
        max-width: 100%;
    }

    /* Left Side */
    .app-bar-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }


    .app-bar-brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .app-bar-logo {
        width: 44px;
        height: 44px;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.25) 0%, rgba(255, 255, 255, 0.1) 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .app-bar-logo i {
        color: white;
        font-size: 1.25rem;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .app-bar-title-group {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .app-bar-title {
        margin: 0;
        font-size: 1.375rem;
        font-weight: 700;
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        line-height: 1.2;
    }

    .app-bar-subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: -2px;
    }

    /* Right Side */
    .app-bar-right {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .app-bar-item {
        display: flex;
        align-items: center;
    }

    .app-bar-user {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
    }

    .app-bar-user:hover {
        background: rgba(255, 255, 255, 0.15);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .app-bar-user-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .app-bar-user-text {
        color: white;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .app-bar-user-action {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        padding: 0.25rem;
        border-radius: 6px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .app-bar-user-action:hover {
        color: white;
        background: rgba(255, 255, 255, 0.1);
        transform: scale(1.1);
    }

    .app-bar-external-link {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        padding: 0.75rem;
        border-radius: 10px;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .app-bar-external-link:hover {
        color: white;
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    .app-bar-external-link i {
        font-size: 1.125rem;
    }

    /* Sidebar */
    .sidebar {
        width: 280px;
        position: fixed;
        top: 70px;
        bottom: 0;
        left: 0;
        background: white;
        box-shadow: 4px 0 20px rgba(0, 0, 0, 0.1);
        z-index: 900;
        overflow-y: auto;
        overflow-x: hidden;
        border-right: 1px solid rgba(0, 0, 0, 0.08);
    }
    
    .has-security-banner .sidebar {
        top: 138px; /* Security banner (68px) + App bar (70px) */
    }

    /* Main Content */
    .main-content {
        margin-left: 280px;
        padding-top: 70px;
        min-height: 100vh;
        background: linear-gradient(135deg, #f8f9ff 0%, #e8f4fd 100%);
        position: relative;
    }
    
    .has-security-banner .main-content {
        padding-top: 138px; /* Security banner (68px) + App bar (70px) */
    }

    .main-content-inner {
        padding: 1.5rem;
        min-height: calc(100vh - 70px);
    }
    
    .has-security-banner .main-content-inner {
        min-height: calc(100vh - 138px);
    }


    /* Mobile Responsive */
    @@media screen and (max-width: 768px) {
        .app-bar-container {
            padding: 0 1rem;
        }

        .app-bar-brand {
            gap: 0.5rem;
        }

        .app-bar-logo {
            width: 36px;
            height: 36px;
        }

        .app-bar-title {
            font-size: 1.125rem;
        }

        .app-bar-subtitle {
            font-size: 0.625rem;
        }

        .app-bar-right {
            gap: 0.5rem;
        }

        .app-bar-user {
            padding: 0.375rem 0.75rem;
        }

        .app-bar-user-text {
            display: none;
        }

        .sidebar {
            display: none;
        }

        .main-content {
            margin-left: 0;
        }
    }

    @@media screen and (max-width: 480px) {
        .app-bar-brand .app-bar-subtitle {
            display: none;
        }

        .app-bar-external-link {
            padding: 0.5rem;
        }
    }



    /* High contrast improvements */
    @@media (prefers-reduced-motion: reduce) {
        .sidebar,
        .main-content,
        .app-bar-user,
        .app-bar-external-link {
            transition: none;
        }
    }
</style>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Test if JS interop is working
                await JSRuntime.InvokeVoidAsync("console.log", "Blazor MainLayout initialized successfully");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"JS Interop error: {ex.Message}");
            }
        }
    }
}