            <NavigationLink Href="video-generation" 
                           Text="Video Generation" 
                           IconClass="fa fa-video"
                           IsEnabled="@GetNavigationState("/video-generation").IsEnabled"
                           TooltipMessage="@GetNavigationState("/video-generation").TooltipMessage"
                           ShowIndicator="@GetNavigationState("/video-generation").ShowIndicator" />
            <NavigationLink Href="audio-test" 
                           Text="Audio Test" 
                           IconClass="fa fa-headphones"
                           IsEnabled="@GetNavigationState("/audio-test").IsEnabled"
                           TooltipMessage="@GetNavigationState("/audio-test").TooltipMessage"
