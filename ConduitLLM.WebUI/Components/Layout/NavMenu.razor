<!-- Custom Navigation Styling -->
<style>
    .nav-menu {
        display: flex;
        flex-direction: column;
        height: 100%;
        background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
        min-height: 0; /* Enable proper flex scrolling */
    }

    /* Navigation Sections */
    .nav-sections {
        flex: 1;
        padding: 1rem 0;
        overflow-y: auto;
        overflow-x: hidden;
        scrollbar-width: thin;
        scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
        min-height: 0; /* Important for flex child scrolling */
    }

    .nav-sections::-webkit-scrollbar {
        width: 4px;
    }

    .nav-sections::-webkit-scrollbar-track {
        background: transparent;
    }

    .nav-sections::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 2px;
    }

    /* Navigation Links */
    .nav-link {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 0 1rem 0.25rem;
        padding: 0.75rem 1rem;
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        border-radius: 10px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .nav-link-primary {
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 1rem;
    }

    .nav-link-content {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex: 1;
    }

    .nav-link-content i {
        width: 20px;
        text-align: center;
        color: rgba(255, 255, 255, 0.8);
        transition: all 0.3s ease;
    }

    .nav-link-indicator {
        width: 0;
        height: 100%;
        background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
        position: absolute;
        left: 0;
        top: 0;
        transition: width 0.3s ease;
        border-radius: 0 4px 4px 0;
    }

    .nav-link:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateX(4px);
        color: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .nav-link:hover .nav-link-content i {
        color: white;
        transform: scale(1.1);
    }

    .nav-link:hover .nav-link-indicator {
        width: 4px;
    }

    .nav-link.active {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    .nav-link.active .nav-link-content i {
        color: white;
        transform: scale(1.1);
    }

    .nav-link.active .nav-link-indicator {
        width: 4px;
    }

    /* Disabled Navigation Links */
    .nav-link-disabled {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 0 1rem 0.25rem;
        padding: 0.75rem 1rem;
        color: rgba(255, 255, 255, 0.4);
        text-decoration: none;
        border-radius: 10px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.3s ease;
        overflow: hidden;
        cursor: not-allowed;
        opacity: 0.6;
        background: rgba(255, 255, 255, 0.05);
    }

    .nav-link-disabled:hover {
        transform: none;
        background: rgba(255, 255, 255, 0.08);
        box-shadow: none;
    }

    .nav-link-disabled .nav-link-content i {
        color: rgba(255, 255, 255, 0.3);
    }

    /* Warning and Lock Indicators */
    .nav-link-warning-indicator,
    .nav-link-lock-indicator {
        margin-left: auto;
        font-size: 0.75rem;
        transition: all 0.3s ease;
    }

    .nav-link-warning-indicator {
        color: #fbbf24;
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    .nav-link-lock-indicator {
        color: rgba(255, 255, 255, 0.4);
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: .5;
        }
    }

    /* Navigation Groups */
    .nav-group {
        margin-bottom: 0.5rem;
    }

    .nav-group-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 0 1rem;
        padding: 0.75rem 1rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
        z-index: 10;
        pointer-events: auto !important;
    }

    .nav-group-header-content {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .nav-group-header-content i {
        width: 20px;
        text-align: center;
        color: rgba(255, 255, 255, 0.7);
        transition: all 0.3s ease;
    }

    .nav-chevron {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.75rem;
        transition: all 0.3s ease;
    }

    .nav-group-header:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .nav-group-header:hover .nav-group-header-content i,
    .nav-group-header:hover .nav-chevron {
        color: white;
    }

    .nav-group-header.expanded {
        color: white;
        background: rgba(255, 255, 255, 0.1);
    }

    .nav-group-header.expanded .nav-group-header-content i,
    .nav-group-header.expanded .nav-chevron {
        color: white;
    }

    .nav-group-header.expanded .nav-chevron {
        transform: rotate(90deg);
    }

    .nav-group-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease;
        margin-left: 1rem;
        margin-right: 1rem;
    }

    .nav-group-content.show {
        max-height: 500px;
    }

    .nav-group-content .nav-link {
        margin: 0.25rem 0;
        margin-left: 1.5rem;
        padding: 0.625rem 1rem;
        font-size: 0.8125rem;
        background: rgba(255, 255, 255, 0.05);
        border-left: 2px solid rgba(255, 255, 255, 0.2);
    }

    .nav-group-content .nav-link:hover {
        background: rgba(255, 255, 255, 0.15);
        border-left-color: rgba(255, 255, 255, 0.6);
        transform: translateX(2px);
    }

    .nav-group-content .nav-link.active {
        background: rgba(255, 255, 255, 0.2);
        border-left-color: white;
    }

    /* Footer */
    .nav-footer {
        padding: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
        flex-shrink: 0; /* Prevent footer from shrinking */
    }

    .nav-footer-content {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nav-footer-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.75rem;
        font-weight: 500;
    }

    .nav-footer-item i {
        color: rgba(255, 255, 255, 0.5);
    }

    /* Mobile Optimizations */
    @@media (max-width: 768px) {
        .nav-link {
            margin: 0 0.5rem 0.25rem;
            padding: 0.625rem 0.75rem;
        }

        .nav-group-header {
            margin: 0 0.5rem;
            padding: 0.625rem 0.75rem;
        }

        .nav-group-content .nav-link {
            margin-left: 1rem;
            padding: 0.5rem 0.75rem;
        }
    }

</style>

@code {
    private Dictionary<string, NavigationItemState> _navigationStates = new();

    protected override async Task OnInitializedAsync()
    {
        // Load initial navigation states
        _navigationStates = await NavigationStateService.GetAllNavigationStatesAsync();
        
        // Subscribe to state changes
        NavigationStateService.NavigationStateChanged += OnNavigationStateChanged;
    }

    private NavigationItemState GetNavigationState(string route)
    {
        return _navigationStates.GetValueOrDefault(route, new NavigationItemState { IsEnabled = true });
    }

    private async void OnNavigationStateChanged(object? sender, NavigationStateChangedEventArgs e)
    {
        _navigationStates[e.Route] = e.NewState;
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        NavigationStateService.NavigationStateChanged -= OnNavigationStateChanged;
    }
}