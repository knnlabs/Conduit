                           TooltipMessage="@GetNavigationState("/embeddings/overview").TooltipMessage"
                           ShowIndicator="@GetNavigationState("/embeddings/overview").ShowIndicator" />
            <NavigationLink Href="embeddings/analytics" 
                           Text="Embeddings Analytics" 
                           IconClass="fa fa-chart-bar"
                           IsEnabled="@GetNavigationState("/embeddings/analytics").IsEnabled"
