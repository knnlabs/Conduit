@using Microsoft.AspNetCore.Components.Routing

<div class="nav-menu">
    <!-- Main Navigation -->
    <div class="nav-sections">
        <!-- Dashboard -->
        <NavLink class="nav-link nav-link-primary" href="" Match="NavLinkMatch.All">
            <div class="nav-link-content">
                <i class="fa fa-home"></i>
                <span>Dashboard</span>
            </div>
            <div class="nav-link-indicator"></div>
        </NavLink>
        
        <!-- Core Section -->
        <div class="nav-group">
            <div class="nav-group-header @(coreExpanded ? "expanded" : "")" @onclick="ToggleCoreSection">
                <div class="nav-group-header-content">
                    <i class="fa fa-puzzle-piece"></i>
                    <span>Core Features</span>
                </div>
                <i class="fa fa-chevron-right nav-chevron"></i>
            </div>
            
            <div class="nav-group-content @(coreExpanded ? "show" : "")">
                <NavLink class="nav-link" href="chat" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-comment-dots"></i>
                        <span>Chat Interface</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="audio-test" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-headphones"></i>
                        <span>Audio Test</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
            </div>
        </div>
        
        <!-- Configuration Section -->
        <div class="nav-group">
            <div class="nav-group-header @(configExpanded ? "expanded" : "")" @onclick="ToggleConfigSection">
                <div class="nav-group-header-content">
                    <i class="fa fa-cogs"></i>
                    <span>Configuration</span>
                </div>
                <i class="fa fa-chevron-right nav-chevron"></i>
            </div>
            
            <div class="nav-group-content @(configExpanded ? "show" : "")">
                <NavLink class="nav-link" href="configuration" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-sliders-h"></i>
                        <span>General Settings</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="routing-settings" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-route"></i>
                        <span>Routing</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="caching-settings" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-database"></i>
                        <span>Caching</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="ip-access-filtering" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-shield-alt"></i>
                        <span>IP Filtering</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
            </div>
        </div>
        
        <!-- Keys & Costs Section -->
        <div class="nav-group">
            <div class="nav-group-header @(keysExpanded ? "expanded" : "")" @onclick="ToggleKeysSection">
                <div class="nav-group-header-content">
                    <i class="fa fa-key"></i>
                    <span>Keys & Analytics</span>
                </div>
                <i class="fa fa-chevron-right nav-chevron"></i>
            </div>
            
            <div class="nav-group-content @(keysExpanded ? "show" : "")">
                <NavLink class="nav-link" href="virtualkeys" Match="NavLinkMatch.All">
                    <div class="nav-link-content">
                        <i class="fa fa-key"></i>
                        <span>Virtual Keys</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="virtualkeys/dashboard" Match="NavLinkMatch.All">
                    <div class="nav-link-content">
                        <i class="fa fa-chart-line"></i>
                        <span>Keys Dashboard</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="cost-dashboard" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-dollar-sign"></i>
                        <span>Cost Analytics</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="request-logs" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-history"></i>
                        <span>Request Logs</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="model-costs" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-money-bill-wave"></i>
                        <span>Model Pricing</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="audio-usage" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-microphone-alt"></i>
                        <span>Audio Usage</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
            </div>
        </div>
        
        <!-- System Section -->
        <div class="nav-group">
            <div class="nav-group-header @(systemExpanded ? "expanded" : "")" @onclick="ToggleSystemSection">
                <div class="nav-group-header-content">
                    <i class="fa fa-server"></i>
                    <span>System Health</span>
                </div>
                <i class="fa fa-chevron-right nav-chevron"></i>
            </div>
            
            <div class="nav-group-content @(systemExpanded ? "show" : "")">
                <NavLink class="nav-link" href="system-info" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-info-circle"></i>
                        <span>System Information</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
                <NavLink class="nav-link" href="provider-health" Match="NavLinkMatch.Prefix">
                    <div class="nav-link-content">
                        <i class="fa fa-heartbeat"></i>
                        <span>Provider Health</span>
                    </div>
                    <div class="nav-link-indicator"></div>
                </NavLink>
            </div>
        </div>
    </div>
    
    <!-- Footer -->
    <div class="nav-footer">
        <div class="nav-footer-content">
            <div class="nav-footer-item">
                <i class="fa fa-code"></i>
                <span class="nav-footer-text">Conduit</span>
            </div>
        </div>
    </div>
</div>

<!-- Custom Navigation Styling -->
<style>
    .nav-menu {
        display: flex;
        flex-direction: column;
        height: 100%;
        background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
    }

    /* Navigation Sections */
    .nav-sections {
        flex: 1;
        padding: 1rem 0;
        overflow-y: auto;
        scrollbar-width: thin;
        scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
    }

    .nav-sections::-webkit-scrollbar {
        width: 4px;
    }

    .nav-sections::-webkit-scrollbar-track {
        background: transparent;
    }

    .nav-sections::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.3);
        border-radius: 2px;
    }

    /* Navigation Links */
    .nav-link {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 0 1rem 0.25rem;
        padding: 0.75rem 1rem;
        color: rgba(255, 255, 255, 0.9);
        text-decoration: none;
        border-radius: 10px;
        font-size: 0.875rem;
        font-weight: 500;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .nav-link-primary {
        background: rgba(255, 255, 255, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 1rem;
    }

    .nav-link-content {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex: 1;
    }

    .nav-link-content i {
        width: 20px;
        text-align: center;
        color: rgba(255, 255, 255, 0.8);
        transition: all 0.3s ease;
    }

    .nav-link-indicator {
        width: 0;
        height: 100%;
        background: linear-gradient(135deg, #ffffff 0%, rgba(255, 255, 255, 0.8) 100%);
        position: absolute;
        left: 0;
        top: 0;
        transition: width 0.3s ease;
        border-radius: 0 4px 4px 0;
    }

    .nav-link:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateX(4px);
        color: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .nav-link:hover .nav-link-content i {
        color: white;
        transform: scale(1.1);
    }

    .nav-link:hover .nav-link-indicator {
        width: 4px;
    }

    .nav-link.active {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
    }

    .nav-link.active .nav-link-content i {
        color: white;
        transform: scale(1.1);
    }

    .nav-link.active .nav-link-indicator {
        width: 4px;
    }

    /* Navigation Groups */
    .nav-group {
        margin-bottom: 0.5rem;
    }

    .nav-group-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 0 1rem;
        padding: 0.75rem 1rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        font-size: 0.875rem;
        cursor: pointer;
        border-radius: 10px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        position: relative;
        z-index: 10;
        pointer-events: auto !important;
    }

    .nav-group-header-content {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .nav-group-header-content i {
        width: 20px;
        text-align: center;
        color: rgba(255, 255, 255, 0.7);
        transition: all 0.3s ease;
    }

    .nav-chevron {
        color: rgba(255, 255, 255, 0.6);
        font-size: 0.75rem;
        transition: all 0.3s ease;
    }

    .nav-group-header:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .nav-group-header:hover .nav-group-header-content i,
    .nav-group-header:hover .nav-chevron {
        color: white;
    }

    .nav-group-header.expanded {
        color: white;
        background: rgba(255, 255, 255, 0.1);
    }

    .nav-group-header.expanded .nav-group-header-content i,
    .nav-group-header.expanded .nav-chevron {
        color: white;
    }

    .nav-group-header.expanded .nav-chevron {
        transform: rotate(90deg);
    }

    .nav-group-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.4s ease;
        margin-left: 1rem;
        margin-right: 1rem;
    }

    .nav-group-content.show {
        max-height: 500px;
    }

    .nav-group-content .nav-link {
        margin: 0.25rem 0;
        margin-left: 1.5rem;
        padding: 0.625rem 1rem;
        font-size: 0.8125rem;
        background: rgba(255, 255, 255, 0.05);
        border-left: 2px solid rgba(255, 255, 255, 0.2);
    }

    .nav-group-content .nav-link:hover {
        background: rgba(255, 255, 255, 0.15);
        border-left-color: rgba(255, 255, 255, 0.6);
        transform: translateX(2px);
    }

    .nav-group-content .nav-link.active {
        background: rgba(255, 255, 255, 0.2);
        border-left-color: white;
    }

    /* Footer */
    .nav-footer {
        padding: 1rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
    }

    .nav-footer-content {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nav-footer-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.75rem;
        font-weight: 500;
    }

    .nav-footer-item i {
        color: rgba(255, 255, 255, 0.5);
    }

    /* Mobile Optimizations */
    @@media (max-width: 768px) {
        .nav-link {
            margin: 0 0.5rem 0.25rem;
            padding: 0.625rem 0.75rem;
        }

        .nav-group-header {
            margin: 0 0.5rem;
            padding: 0.625rem 0.75rem;
        }

        .nav-group-content .nav-link {
            margin-left: 1rem;
            padding: 0.5rem 0.75rem;
        }
    }

</style>

@code {
    private bool coreExpanded = true;
    private bool configExpanded = true;
    private bool keysExpanded = true;
    private bool systemExpanded = true;
    
    private void ToggleCoreSection()
    {
        coreExpanded = !coreExpanded;
        Console.WriteLine($"Core section toggled: {coreExpanded}");
        StateHasChanged();
    }
    
    private void ToggleConfigSection()
    {
        configExpanded = !configExpanded;
        StateHasChanged();
    }
    
    private void ToggleKeysSection()
    {
        keysExpanded = !keysExpanded;
        StateHasChanged();
    }
    
    private void ToggleSystemSection()
    {
        systemExpanded = !systemExpanded;
        StateHasChanged();
    }
}