@using Microsoft.AspNetCore.Components.Routing
@using MudBlazor

<MudNavMenu Bordered="true" Rounded="true" Class="mt-2">
    <MudText Typo="Typo.h6" Class="px-4 py-2">Menu</MudText>
    <MudDivider Class="mb-2"/>
    
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">
        Dashboard
    </MudNavLink>
    
    <MudNavGroup Title="Core" Icon="@Icons.Material.Filled.Extension" Expanded="true">
        <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">
            Home
        </MudNavLink>
        <MudNavLink Href="chat" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Chat">
            Chat
        </MudNavLink>
    </MudNavGroup>
    
    <MudNavGroup Title="Configuration" Icon="@Icons.Material.Filled.Settings" Expanded="true">
        <MudNavLink Href="configuration" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Tune">
            General Config
        </MudNavLink>
        <MudNavLink Href="routing-settings" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Shuffle">
            Routing
        </MudNavLink>
        <MudNavLink Href="caching-settings" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Storage">
            Caching
        </MudNavLink>
    </MudNavGroup>
    
    <MudNavGroup Title="Keys & Costs" Icon="@Icons.Material.Filled.Key" Expanded="true">
        <MudNavLink Href="virtualkeys" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Key">
            Virtual Keys
        </MudNavLink>
        <MudNavLink Href="virtualkeys/dashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Insights">
            Keys Dashboard
        </MudNavLink>
        <MudNavLink Href="cost-dashboard" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.AttachMoney">
            Cost Dashboard
        </MudNavLink>
        <MudNavLink Href="request-logs" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.History">
            Request Logs
        </MudNavLink>
        <MudNavLink Href="model-costs" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.MonetizationOn">
            Model Costs
        </MudNavLink>
    </MudNavGroup>
    
    <MudNavGroup Title="System" Icon="@Icons.Material.Filled.Info" Expanded="true">
        <MudNavLink Href="system-info" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Info">
            System Information
        </MudNavLink>
        <MudNavLink Href="db-status" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Storage">
            Database Status
        </MudNavLink>
    </MudNavGroup>
    
    <MudDivider Class="my-2"/>
</MudNavMenu>
