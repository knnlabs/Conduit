                _audioHealthStatus[$"{provider.Id}_transcription"] = new AudioHealthStatus
                {
                    IsHealthy = false,
                    ErrorMessage = ex.Message,
                    LastChecked = DateTime.UtcNow
                };
            }
            
            if (provider.TextToSpeechEnabled)
            {
                _audioHealthStatus[$"{provider.Id}_tts"] = new AudioHealthStatus
                {
                    IsHealthy = false,
                    ErrorMessage = ex.Message,
                    LastChecked = DateTime.UtcNow
                };
            }
            
            if (provider.RealtimeEnabled)
