    private async Task TestAudioProviderAsync(AudioDTOs.AudioProviderConfigDto provider)
    {
        try
        {
            // Test transcription
            if (provider.TranscriptionEnabled)
            {
                var startTime = DateTime.UtcNow;
                var result = await AdminApiClient.TestAudioProviderAsync(provider.Id, "transcription");
                var endTime = DateTime.UtcNow;
                
                _audioHealthStatus[$"{provider.Id}_transcription"] = new AudioHealthStatus
                {
                    IsHealthy = result.Success,
                    ResponseTimeMs = (endTime - startTime).TotalMilliseconds,
                    ErrorMessage = result.ErrorDetails,
                    LastChecked = DateTime.UtcNow
                };
            }
            
            // Test TTS
            if (provider.TextToSpeechEnabled)
            {
                var startTime = DateTime.UtcNow;
                var result = await AdminApiClient.TestAudioProviderAsync(provider.Id, "tts");
                var endTime = DateTime.UtcNow;
                
                _audioHealthStatus[$"{provider.Id}_tts"] = new AudioHealthStatus
                {
                    IsHealthy = result.Success,
                    ResponseTimeMs = (endTime - startTime).TotalMilliseconds,
                    ErrorMessage = result.ErrorDetails,
                    LastChecked = DateTime.UtcNow
                };
            }
            
            // Test real-time
            if (provider.RealtimeEnabled)
            {
                var startTime = DateTime.UtcNow;
                var result = await AdminApiClient.TestAudioProviderAsync(provider.Id, "realtime");
                var endTime = DateTime.UtcNow;
                
                _audioHealthStatus[$"{provider.Id}_realtime"] = new AudioHealthStatus
                {
                    IsHealthy = result.Success,
                    ResponseTimeMs = (endTime - startTime).TotalMilliseconds,
                    ErrorMessage = result.ErrorDetails,
                    LastChecked = DateTime.UtcNow
                };
            }
            
            StateHasChanged();
            ToastService.ShowSuccess($"Audio provider '{provider.ProviderName}' tested successfully");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error testing audio provider {ProviderId}", provider.Id);
            ToastService.ShowError($"Error testing audio provider: {ex.Message}");
            
            // Mark all capabilities as unhealthy
            if (provider.TranscriptionEnabled)
