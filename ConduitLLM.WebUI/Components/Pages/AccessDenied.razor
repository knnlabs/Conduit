@page "/access-denied"
@inject NavigationManager NavigationManager

<PageTitle>Access Denied - ConduitLLM</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-10">
    <MudCard Elevation="3" Class="rounded-lg">
        <MudCardHeader Class="mud-error">
            <CardHeaderContent>
                <MudText Typo="Typo.h5" Color="Color.Surface">Access Denied</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent Class="d-flex flex-column align-center pa-6">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Color="Color.Error" Size="Size.Large" Class="mb-4" Style="font-size: 4rem;" />
            <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">You do not have permission to view this resource</MudText>
            <MudText Align="Align.Center" Class="mb-6">
                You need to be authenticated with the appropriate credentials to access this page.
            </MudText>
            <MudStack Row="false" Spacing="2" AlignItems="AlignItems.Center" Style="max-width: 300px; width: 100%;">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" OnClick="NavigateToLogin">Go to Login</MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" FullWidth="true" OnClick="NavigateToHome">Return to Home</MudButton>
            </MudStack>
        </MudCardContent>
    </MudCard>
</MudContainer>

@code {
    private void NavigateToLogin()
    {
        NavigationManager.NavigateTo("/login");
    }

    private void NavigateToHome()
    {
        NavigationManager.NavigateTo("/");
    }
}
