@page "/virtualkeys/edit-toast/{id?}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Logging
@using ConduitLLM.WebUI.Services
@using ConduitLLM.WebUI.Components
@using ConduitLLM.WebUI.Extensions
@using ConduitLLM.Configuration.DTOs.VirtualKey
@using ConduitLLM.WebUI.Interfaces
@inject IAdminApiClient AdminApiClient
@inject NavigationManager NavigationManager
@inject ILogger<VirtualKeyEditToast> Logger
@inject ConfigurationChangeNotifier ConfigChangeNotifier
@inject ConduitLLM.WebUI.Interfaces.IVirtualKeyService VirtualKeyService
@inject IJSRuntime JSRuntime
@inject IToastService ToastService
@rendermode InteractiveServer

<PageTitle>@(Id.HasValue ? "Edit Virtual Key" : "Create Virtual Key") - ConduitLLM</PageTitle>

<div class="container container-xxl">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="vke-header bg-gradient-primary text-white rounded-3 p-4 mb-4">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h1 class="h3 mb-2">
                            <i class="fa @(Id.HasValue ? "fa-edit" : "fa-plus") me-3"></i>@(Id.HasValue ? "Edit Virtual Key" : "Create Virtual Key")
                        </h1>
                        <p class="mb-0 opacity-90">
                            @(Id.HasValue ? "Modify your virtual key settings and permissions" : "Create a secure virtual key with custom permissions and spending limits")
                        </p>
                    </div>
                    <div class="col-md-4 text-md-end">
                        <div class="vke-stats">
                            @if (Id.HasValue && request?.MaxBudget.HasValue == true && request.MaxBudget > 0)
                            {
                                <div class="stat-item">
                                    <i class="fa fa-dollar-sign me-2"></i>
                                    <span class="small">$@(currentSpend.ToString("F2")) / $@(request.MaxBudget?.ToString("F2"))</span>
                                </div>
                            }
                            <div class="stat-item mt-2">
                                <i class="fa fa-shield-alt me-2"></i>
                                <span class="small">@(selectedModels.Count > 0 ? $"{selectedModels.Count} Models" : "All Models")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="vke-loading text-center py-5">
            <div class="vke-loading-spinner">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
            <p class="mt-3 text-muted fw-medium">Loading virtual key data...</p>
        </div>
    }
    else if (request == null && Id.HasValue)
    {
        <div class="vke-error-state text-center py-5">
            <div class="vke-error-icon mb-4">
                <i class="fa fa-exclamation-triangle fa-4x text-warning opacity-75"></i>
            </div>
            <h4 class="fw-bold text-dark mb-3">Virtual Key Not Found</h4>
            <p class="text-muted mb-4 lead">
                The requested virtual key could not be found or an error occurred while loading it.
            </p>
            <button type="button" class="btn modern-btn-primary vke-btn-primary" @onclick="ReturnToList">
                <i class="fa fa-arrow-left me-2"></i>Return to Virtual Keys
            </button>
        </div>
    }
    else if (showCreatedKey)
    {
        <div class="vke-success-state">
            <div class="card modern-card vke-success-card">
                <div class="card-header modern-card-header vke-success-header">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="vke-success-icon">
                                <i class="fa fa-check-circle fa-3x text-success"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h4 class="mb-1 fw-bold text-dark">Virtual Key Created Successfully!</h4>
                            <p class="mb-0 text-muted">Your new virtual key is ready to use</p>
                        </div>
                    </div>
                </div>
                <div class="card-body modern-card-body p-4">
                    <div class="alert alert-success border-0 mb-4">
                        <h6 class="mb-3 fw-bold">
                            <i class="fa fa-key me-2"></i>Your New Virtual Key
                        </h6>
                        <p class="mb-3">Please save this key as it will only be shown once:</p>
                        <div class="d-flex align-items-center gap-2">
                            <input type="text" readonly value="@createdKey" class="form-control modern-form-control vke-key-input" id="newKeyInput" />
                            <button class="btn modern-btn-success vke-btn-copy" @onclick="async () => await CopyKeyToClipboard()" title="Copy to clipboard">
                                <i class="fa fa-copy"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="alert alert-warning border-0 mb-4">
                        <div class="d-flex align-items-start">
                            <i class="fa fa-exclamation-triangle text-warning me-3 mt-1"></i>
                            <div>
                                <h6 class="mb-2 fw-bold">Important Security Notice</h6>
                                <p class="mb-0">Make sure to securely store this key. You won't be able to retrieve it again. This key can be used to authenticate API requests.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center">
                        <button type="button" class="btn modern-btn-primary vke-btn-primary btn-lg" @onclick="ReturnToList">
                            <i class="fa fa-arrow-left me-2"></i>Return to Virtual Keys List
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <EditForm Model="@request" OnValidSubmit="HandleValidSubmit" FormName="VirtualKeyForm">
            <DataAnnotationsValidator />

            <div class="row g-4">
                <!-- Left Column -->
                <div class="col-12 col-xl-6">
                    <!-- Key Details Card -->
                    <div class="card modern-card vke-card mb-4">
                        <div class="card-header modern-card-header vke-card-header">
                            <h5 class="mb-0 fw-bold">
                                <i class="fa fa-info-circle me-2 text-primary"></i>Key Details
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="modern-form-group mb-3">
                                <label for="keyName" class="modern-form-label fw-semibold">Key Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control modern-form-control vke-input" id="keyName" @bind="request!.KeyName" required placeholder="Enter a descriptive name" />
                                <ValidationMessage For="@(() => request!.KeyName)" />
                            </div>
                            
                            <div class="modern-form-group mb-3">
                                <label for="description" class="modern-form-label fw-semibold">Description</label>
                                <textarea class="form-control modern-form-control vke-textarea" id="description" @bind="description" rows="3" placeholder="Optional description for this key"></textarea>
                            </div>
                            
                            <div class="modern-form-group mb-0">
                                <label for="expiresAt" class="modern-form-label fw-semibold">Expiration Date</label>
                                <input type="datetime-local" class="form-control modern-form-control vke-input" id="expiresAt" @bind="request!.ExpiresAt" />
                                <div class="form-text">Leave empty for no expiration</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Budget Configuration Card -->
                    <div class="card modern-card vke-card">
                        <div class="card-header modern-card-header vke-card-header">
                            <h5 class="mb-0 fw-bold">
                                <i class="fa fa-dollar-sign me-2 text-success"></i>Budget Configuration
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            @if (Id.HasValue && request?.MaxBudget.HasValue == true && request.MaxBudget > 0)
                            {
                                <div class="vke-budget-display mb-4">
                                    <h6 class="fw-bold mb-3">Current Budget Usage</h6>
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="text-muted">Spent: $@(currentSpend.ToString("F2"))</span>
                                        <span class="text-muted">Limit: $@(request.MaxBudget?.ToString("F2"))</span>
                                    </div>
                                    <div class="vke-progress mb-3">
                                        <div class="vke-progress-bar bg-gradient-primary" style="width: @((currentSpend / (request.MaxBudget ?? 1) * 100).ToString("F0"))%"></div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">Next reset: @GetNextBudgetResetDate(request.BudgetDuration ?? "", budgetStartDate)</small>
                                        <button type="button" class="btn btn-sm modern-btn-warning vke-btn-reset" @onclick="ResetCurrentSpend">
                                            <i class="fa fa-sync-alt me-1"></i>Reset Spend
                                        </button>
                                    </div>
                                </div>
                            }
                            
                            <div class="modern-form-group mb-3">
                                <label for="maxBudget" class="modern-form-label fw-semibold">Maximum Budget ($)</label>
                                <div class="input-group">
                                    <span class="input-group-text vke-input-group-text">$</span>
                                    <input type="number" class="form-control modern-form-control vke-input" id="maxBudget" @bind="request!.MaxBudget" min="0" step="0.01" placeholder="0.00" />
                                </div>
                                <div class="form-text">Set to 0 for unlimited spending</div>
                            </div>
                            
                            <div class="modern-form-group mb-0">
                                <label for="budgetDuration" class="modern-form-label fw-semibold">Budget Period</label>
                                <select class="form-select modern-form-select vke-select" id="budgetDuration" @bind="request!.BudgetDuration">
                                    <option value="">No Reset</option>
                                    <option value="daily">Daily</option>
                                    <option value="weekly">Weekly</option>
                                    <option value="monthly">Monthly</option>
                                    <option value="quarterly">Quarterly</option>
                                    <option value="yearly">Yearly</option>
                                </select>
                                <div class="form-text">How often the budget resets</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Right Column -->
                <div class="col-12 col-xl-6">
                    <!-- Model Permissions Card -->
                    <div class="card modern-card vke-card mb-4">
                        <div class="card-header modern-card-header vke-card-header">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0 fw-bold">
                                    <i class="fa fa-robot me-2 text-info"></i>Model Permissions
                                </h5>
                                <span class="badge vke-badge-primary">
                                    @selectedModels.Count @(selectedModels.Count == 1 ? "model" : "models") selected
                                </span>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <!-- Search and Actions -->
                            <div class="mb-3">
                                <div class="input-group mb-2">
                                    <span class="input-group-text vke-input-group-text">
                                        <i class="fa fa-search"></i>
                                    </span>
                                    <input type="text" class="form-control modern-form-control vke-search-input" @bind="modelSearchText" @bind:event="oninput" placeholder="Search models..." />
                                </div>
                                <div class="d-flex gap-2">
                                    <button type="button" class="btn btn-sm modern-btn-outline-primary vke-btn-outline" @onclick="SelectAllModels">
                                        <i class="fa fa-check-square me-1"></i>Select All
                                    </button>
                                    <button type="button" class="btn btn-sm modern-btn-outline-secondary vke-btn-outline" @onclick="ClearModelSelection">
                                        <i class="fa fa-square me-1"></i>Clear All
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Model List -->
                            <div class="vke-model-list">
                                @if (availableModels == null)
                                {
                                    <div class="text-center py-5">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Loading models...</span>
                                        </div>
                                        <p class="mt-2 text-muted">Loading models...</p>
                                    </div>
                                }
                                else if (!availableModels.Any())
                                {
                                    <div class="text-center py-5">
                                        <i class="fa fa-info-circle fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">No models available. Please configure model mappings first.</p>
                                    </div>
                                }
                                else
                                {
                                    var groupedModels = FilterModels()
                                        .GroupBy(m => m.ProviderName)
                                        .OrderBy(g => g.Key);

                                    @foreach (var group in groupedModels)
                                    {
                                        <div class="vke-provider-group">
                                            <div class="vke-provider-header fw-semibold text-muted">
                                                <i class="fa fa-layer-group me-2"></i>@group.Key
                                            </div>
                                            <div class="vke-provider-models">
                                                @foreach (var model in group.OrderBy(m => m.ModelAlias))
                                                {
                                                    <div class="vke-model-item">
                                                        <div class="form-check">
                                                            <input class="form-check-input vke-check-input" type="checkbox" 
                                                                   id="model-@model.ModelAlias"
                                                                   checked="@selectedModels.Contains(model.ModelAlias)"
                                                                   @onchange="e => ToggleModelSelection(model.ModelAlias, (bool)e.Value!)" />
                                                            <label class="form-check-label vke-check-label w-100" for="model-@model.ModelAlias">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <span>@model.ModelAlias</span>
                                                                    <small class="text-muted">@model.ProviderModelId</small>
                                                                </div>
                                                            </label>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                            
                            @if (selectedModels.Count == 0)
                            {
                                <div class="alert vke-info-alert mt-3 mb-0">
                                    <i class="fa fa-info-circle me-2"></i>
                                    <small>No models selected. This key will have access to all available models.</small>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Rate Limiting Card -->
                    <div class="card modern-card vke-card">
                        <div class="card-header modern-card-header vke-card-header">
                            <h5 class="mb-0 fw-bold">
                                <i class="fa fa-tachometer-alt me-2 text-warning"></i>Rate Limiting
                            </h5>
                        </div>
                        <div class="card-body p-4">
                            <div class="modern-form-group mb-3">
                                <label class="modern-form-label fw-semibold">Requests Per Minute (RPM)</label>
                                <div class="input-group">
                                    <span class="input-group-text vke-input-group-text">
                                        <i class="fa fa-clock"></i>
                                    </span>
                                    <input type="number" class="form-control modern-form-control vke-input" @bind="request!.RateLimitRpm" min="0" placeholder="0" />
                                </div>
                                <div class="form-text">Maximum requests allowed per minute (0 = no limit)</div>
                            </div>
                            
                            <div class="modern-form-group mb-0">
                                <label class="modern-form-label fw-semibold">Requests Per Day (RPD)</label>
                                <div class="input-group">
                                    <span class="input-group-text vke-input-group-text">
                                        <i class="fa fa-calendar-day"></i>
                                    </span>
                                    <input type="number" class="form-control modern-form-control vke-input" @bind="request!.RateLimitRpd" min="0" placeholder="0" />
                                </div>
                                <div class="form-text">Maximum requests allowed per day (0 = no limit)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="vke-actions d-flex gap-3 mt-4 pt-4 border-top">
                <button type="submit" class="btn modern-btn-primary vke-btn-primary" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>Saving...</span>
                    }
                    else
                    {
                        <i class="fa fa-@(Id.HasValue ? "save" : "plus") me-2"></i>
                        <span>@(Id.HasValue ? "Update Key" : "Create Key")</span>
                    }
                </button>
                <button type="button" class="btn modern-btn-secondary vke-btn-secondary" @onclick="Cancel">
                    <i class="fa fa-times me-2"></i>Cancel
                </button>
            </div>
        </EditForm>
    }
</div>

