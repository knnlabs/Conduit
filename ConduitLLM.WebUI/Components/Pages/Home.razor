@page "/"
@rendermode InteractiveServer

<PageTitle>ConduitLLM Dashboard</PageTitle>

<div class="container container-xxl">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <div class="hero-section page-header text-white p-5 mb-5">
                <h1 class="display-4 fw-bold mb-3">
                    <i class="fa fa-bolt me-3"></i>ConduitLLM
                </h1>
                <p class="lead mb-4">
                    Your unified gateway to multiple LLM providers with intelligent routing, cost optimization, and comprehensive management.
                </p>
                <div class="row text-center">
                    <div class="col-md-4">
                        <div class="stat-card modern-stat-item">
                            <i class="fa fa-cloud fa-2x mb-2"></i>
                            <h4>Multi-Provider</h4>
                            <p>Connect to OpenAI, Anthropic, Google, and more</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card modern-stat-item">
                            <i class="fa fa-random fa-2x mb-2"></i>
                            <h4>Smart Routing</h4>
                            <p>Intelligent load balancing and failover</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card modern-stat-item">
                            <i class="fa fa-shield fa-2x mb-2"></i>
                            <h4>Secure Access</h4>
                            <p>Virtual keys and IP filtering for security</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Access Cards -->
    <div class="row mb-5">
        <div class="col-12 mb-4">
            <h2 class="text-center mb-4">
                <i class="fa fa-tachometer me-2"></i>Quick Access
            </h2>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 modern-card">
                <div class="card-body modern-card-body text-center">
                    <div class="feature-icon bg-primary text-white rounded-circle mx-auto mb-3">
                        <i class="fa fa-key fa-2x"></i>
                    </div>
                    <h5 class="card-title">Virtual Keys</h5>
                    <p class="card-text">Create and manage API keys with budget controls and usage tracking.</p>
                    <a href="/virtual-keys" class="btn btn-primary modern-btn modern-btn-primary">Manage Keys</a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 modern-card">
                <div class="card-body modern-card-body text-center">
                    <div class="feature-icon bg-success text-white rounded-circle mx-auto mb-3">
                        <i class="fa fa-cogs fa-2x"></i>
                    </div>
                    <h5 class="card-title">Configuration</h5>
                    <p class="card-text">Set up providers, model mappings, and system-wide settings.</p>
                    <a href="/configuration" class="btn btn-success modern-btn">Configure</a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 modern-card">
                <div class="card-body modern-card-body text-center">
                    <div class="feature-icon bg-info text-white rounded-circle mx-auto mb-3">
                        <i class="fa fa-chart-line fa-2x"></i>
                    </div>
                    <h5 class="card-title">Cost Dashboard</h5>
                    <p class="card-text">Monitor spending, analyze usage patterns, and optimize costs.</p>
                    <a href="/cost-dashboard" class="btn btn-info modern-btn">View Dashboard</a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 modern-card">
                <div class="card-body modern-card-body text-center">
                    <div class="feature-icon bg-warning text-white rounded-circle mx-auto mb-3">
                        <i class="fa fa-comments fa-2x"></i>
                    </div>
                    <h5 class="card-title">Chat Interface</h5>
                    <p class="card-text">Test your LLM integrations with the built-in chat interface.</p>
                    <a href="/chat" class="btn btn-warning modern-btn">Start Chat</a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 modern-card">
                <div class="card-body modern-card-body text-center">
                    <div class="feature-icon bg-danger text-white rounded-circle mx-auto mb-3">
                        <i class="fa fa-random fa-2x"></i>
                    </div>
                    <h5 class="card-title">Routing Settings</h5>
                    <p class="card-text">Configure load balancing strategies and fallback models.</p>
                    <a href="/routing-settings" class="btn btn-danger modern-btn">Setup Routing</a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 modern-card">
                <div class="card-body modern-card-body text-center">
                    <div class="feature-icon bg-secondary text-white rounded-circle mx-auto mb-3">
                        <i class="fa fa-database fa-2x"></i>
                    </div>
                    <h5 class="card-title">Caching Settings</h5>
                    <p class="card-text">Configure response caching to reduce costs and improve speed.</p>
                    <a href="/caching-settings" class="btn btn-secondary modern-btn modern-btn-secondary">Cache Settings</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Overview -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="fa fa-star me-2"></i>Key Features
            </h2>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-highlight modern-info-card text-center p-4">
                <i class="fa fa-cloud fa-3x text-primary mb-3"></i>
                <h5>Multi-Provider Support</h5>
                <p>Connect to OpenAI, Anthropic, Google Gemini, Cohere, Mistral, and more providers simultaneously.</p>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-highlight modern-info-card text-center p-4">
                <i class="fa fa-dollar-sign fa-3x text-success mb-3"></i>
                <h5>Cost Optimization</h5>
                <p>Track spending, set budgets, and automatically route to cost-effective models.</p>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-highlight modern-info-card text-center p-4">
                <i class="fa fa-shield-alt fa-3x text-warning mb-3"></i>
                <h5>Security & Access Control</h5>
                <p>Virtual API keys, IP filtering, and comprehensive access management.</p>
            </div>
        </div>
        
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="feature-highlight modern-info-card text-center p-4">
                <i class="fa fa-tachometer-alt fa-3x text-info mb-3"></i>
                <h5>Performance Monitoring</h5>
                <p>Real-time metrics, health checks, and performance analytics.</p>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row">
        <div class="col-12">
            <div class="card modern-card">
                <div class="card-body modern-card-body">
                    <h5 class="card-title text-center mb-4">
                        <i class="fa fa-info-circle me-2"></i>Get Started
                    </h5>
                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="getting-started-step">
                                <div class="step-number">1</div>
                                <h6>Add Providers</h6>
                                <p>Configure your LLM provider credentials in the Configuration section.</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="getting-started-step">
                                <div class="step-number">2</div>
                                <h6>Create Virtual Keys</h6>
                                <p>Generate secure API keys with custom budgets and usage limits.</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="getting-started-step">
                                <div class="step-number">3</div>
                                <h6>Start Using</h6>
                                <p>Test with the chat interface or integrate with your applications.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        border: none;
        margin-bottom: 2rem;
    }
    
    .stat-card {
        padding: 1rem;
        color: white;
    }
    
    .feature-icon {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .getting-started-step {
        padding: 1rem;
    }
    
    .step-number {
        width: 40px;
        height: 40px;
        background: var(--color-primary);
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem auto;
        font-weight: bold;
        font-size: 1.2rem;
    }
</style>