            // Make sure the dialog content is prepared before showing
            await InvokeAsync(() => {
                _showFallbackModal = true;
                StateHasChanged();
            });
            
            // Log for debugging
            Logger.LogDebug("Fallback modal opened for editing fallback {FallbackId}", fallback.Id);
