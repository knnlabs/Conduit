@page "/request-logs"
@using ConduitLLM.WebUI.DTOs
@using System.Globalization
@using System.Text
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components
@using ConduitLLM.WebUI.Components.Shared
@using MudBlazor
@attribute [Authorize]
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Request Logs - ConduitLLM</PageTitle>

<h4 class="mb-4">Request Logs</h4>

<div class="card mb-4">
    <div class="card-header">
        <h6>Filters</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="mb-3">
                    <label for="virtualKeySelect" class="form-label">Virtual Key</label>
                    <select id="virtualKeySelect" class="form-select" @bind="selectedVirtualKeyId">
                        <option value="">All Keys</option>
                        @if (virtualKeys != null)
                        {
                            @foreach (var key in virtualKeys)
                            {
                                <option value="@key.Id">@key.KeyName</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label for="modelSelect" class="form-label">Model</label>
                    <select id="modelSelect" class="form-select" @bind="selectedModel">
                        <option value="">All Models</option>
                        @if (models != null)
                        {
                            @foreach (var model in models)
                            {
                                <option value="@model">@model</option>
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <div class="mb-3">
                    <label for="dateRangeSelect" class="form-label">Date Range</label>
                    <select id="dateRangeSelect" class="form-select" @bind="selectedDateRange">
                        <option value="24h">Last 24 Hours</option>
                        <option value="7d">Last 7 Days</option>
                        <option value="30d">Last 30 Days</option>
                        <option value="custom">Custom Range</option>
                    </select>
                </div>
            </div>
            @if (selectedDateRange == "custom")
            {
                <div class="col-md-2">
                    <div class="mb-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" id="startDate" class="form-control" @bind="startDate" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="mb-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" id="endDate" class="form-control" @bind="endDate" />
                    </div>
                </div>
            }
            <div class="col-md-2">
                <div class="mb-3">
                    <label for="statusCodeSelect" class="form-label">Status Code</label>
                    <select id="statusCodeSelect" class="form-select" @bind="selectedStatusCode">
                        <option value="">All</option>
                        <option value="200">200 (Success)</option>
                        <option value="400">400 (Bad Request)</option>
                        <option value="401">401 (Unauthorized)</option>
                        <option value="404">404 (Not Found)</option>
                        <option value="429">429 (Rate Limited)</option>
                        <option value="500">500 (Server Error)</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-end">
                <button type="button" class="btn btn-primary me-2" @onclick="ApplyFiltersHandler">Apply Filters</button>
                <button type="button" class="btn btn-outline-secondary" @onclick="ClearFiltersHandler">Clear Filters</button>
            </div>
        </div>
    </div>
</div>

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <span class="ms-3">Loading logs...</span>
    </div>
}
else if (logResults == null || logResults.Items.Count == 0)
{
    <div class="alert alert-info my-4">
        No logs found for the selected filters.
    </div>
}
else
{
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h6 class="mb-0">Results (@logResults.TotalCount total logs)</h6>
            <button type="button" class="btn btn-outline-primary btn-sm" @onclick="ExportToCsvHandler">
                <i class="fas fa-download me-1"></i> Export to CSV
            </button>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>Virtual Key</th>
                            <th>Model</th>
                            <th>Type</th>
                            <th>Tokens (In/Out)</th>
                            <th>Cost ($)</th>
                            <th>Time (ms)</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in logResults.Items)
                        {
                            <tr>
                                <td>@log.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@log.VirtualKeyName</td>
                                <td>@log.ModelName</td>
                                <td>@log.RequestType</td>
                                <td>@log.InputTokens / @log.OutputTokens</td>
                                <td>@log.Cost.ToString("F6")</td>
                                <td>@log.ResponseTimeMs.ToString("F2")</td>
                                <td>
                                    @if (log.StatusCode.HasValue)
                                    {
                                        <span class="badge bg-@GetStatusColorClass(log.StatusCode.Value)">
                                            @log.StatusCode
                                        </span>
                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-link text-primary" @onclick="@(e => ViewLogByIdHandler(log.Id))">
                                        <i class="fas fa-eye"></i> View
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <div>
                Showing @((currentPage - 1) * pageSize + 1) to @Math.Min(currentPage * pageSize, logResults.TotalCount) of @logResults.TotalCount entries
            </div>
            <nav aria-label="Page navigation">
                <ul class="pagination mb-0">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="@(e => GoToPageHandler(1))" disabled="@(currentPage == 1)">First</button>
                    </li>
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="@(e => GoToPageHandler(currentPage - 1))" disabled="@(currentPage == 1)">Previous</button>
                    </li>
                    @for (int i = Math.Max(1, currentPage - 2); i <= Math.Min(logResults.TotalPages, currentPage + 2); i++)
                    {
                        int pageNumber = i;
                        <li class="page-item @(pageNumber == currentPage ? "active" : "")">
                            <button class="page-link" @onclick="@(e => GoToPageHandler(pageNumber))">@pageNumber</button>
                        </li>
                    }
                    <li class="page-item @(currentPage == logResults.TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="@(e => GoToPageHandler(currentPage + 1))" disabled="@(currentPage == logResults.TotalPages)">Next</button>
                    </li>
                    <li class="page-item @(currentPage == logResults.TotalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="@(e => GoToPageHandler(logResults.TotalPages))" disabled="@(currentPage == logResults.TotalPages)">Last</button>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}

@if (selectedLog != null && isModalOpen)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Request Log Details</h5>
                    <button type="button" class="btn-close" @onclick="CloseLogDetailsModalHandler" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-6">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 120px; font-weight: 500">Request ID:</div>
                                            <div>@selectedLog.Id</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 120px; font-weight: 500">Timestamp:</div>
                                            <div>@selectedLog.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 120px; font-weight: 500">Virtual Key:</div>
                                            <div>@selectedLog.VirtualKeyName</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 120px; font-weight: 500">Model:</div>
                                            <div>@selectedLog.ModelName</div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 120px; font-weight: 500">Request Type:</div>
                                            <div>@selectedLog.RequestType</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 120px; font-weight: 500">Status Code:</div>
                                            <div>
                                                <span class="badge bg-@GetStatusColorClass(selectedLog.StatusCode ?? 0)">
                                                    @(selectedLog.StatusCode?.ToString() ?? "N/A")
                                                </span>
                                            </div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 120px; font-weight: 500">Cost:</div>
                                            <div>$@selectedLog.Cost.ToString("0.000000")</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 120px; font-weight: 500">Tokens:</div>
                                            <div>@selectedLog.InputTokens (input) / @selectedLog.OutputTokens (output)</div>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-12 mt-3">
                                <hr />
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 150px; font-weight: 500">Response Time:</div>
                                            <div>@selectedLog.ResponseTimeMs.ToString("F2") ms</div>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex">
                                            <div style="width: 150px; font-weight: 500">Total Tokens:</div>
                                            <div>@selectedLog.TotalTokens</div>
                                        </div>
                                    </li>
                                    @if (!string.IsNullOrEmpty(selectedLog.UserId))
                                    {
                                        <li class="list-group-item">
                                            <div class="d-flex">
                                                <div style="width: 150px; font-weight: 500">User ID:</div>
                                                <div>@selectedLog.UserId</div>
                                            </div>
                                        </li>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedLog.ClientIp))
                                    {
                                        <li class="list-group-item">
                                            <div class="d-flex">
                                                <div style="width: 150px; font-weight: 500">Client IP:</div>
                                                <div>@selectedLog.ClientIp</div>
                                            </div>
                                        </li>
                                    }
                                    @if (!string.IsNullOrEmpty(selectedLog.RequestPath))
                                    {
                                        <li class="list-group-item">
                                            <div class="d-flex">
                                                <div style="width: 150px; font-weight: 500">Request Path:</div>
                                                <div>@selectedLog.RequestPath</div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseLogDetailsModalHandler">Close</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private PagedResult<RequestLogDto>? logResults;
    private List<dynamic>? virtualKeys;
    private List<string>? models;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 20;
    
    // Filter state
    private string? selectedVirtualKeyId;
    private string? selectedModel;
    private string? selectedStatusCode;
    private string selectedDateRange = "24h";
    private DateTime startDate = DateTime.UtcNow.AddDays(-1);
    private DateTime endDate = DateTime.UtcNow;
    
    // Modal state
    private RequestLogDto? selectedLog;
    private bool isModalOpen = false;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadFiltersDataAsync();
        await LoadLogsAsync();
    }

    private async Task LoadFiltersDataAsync()
    {
        try
        {
            virtualKeys = await Http.GetFromJsonAsync<List<dynamic>>("api/logs/keys");
            models = await Http.GetFromJsonAsync<List<string>>("api/logs/models");
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error loading filter data: {ex.Message}");
        }
    }

    private async Task LoadLogsAsync()
    {
        isLoading = true;
        
        try
        {
            SetDateRangeFromSelection();
            
            var queryParams = new List<string>
            {
                $"page={currentPage}",
                $"pageSize={pageSize}",
                $"startDate={startDate:yyyy-MM-dd}",
                $"endDate={endDate:yyyy-MM-dd}"
            };
            
            if (!string.IsNullOrEmpty(selectedVirtualKeyId))
            {
                queryParams.Add($"virtualKeyId={selectedVirtualKeyId}");
            }
            
            if (!string.IsNullOrEmpty(selectedModel))
            {
                queryParams.Add($"modelFilter={Uri.EscapeDataString(selectedModel)}");
            }
            
            if (!string.IsNullOrEmpty(selectedStatusCode))
            {
                queryParams.Add($"statusCode={selectedStatusCode}");
            }
            
            var url = $"api/logs/search?{string.Join("&", queryParams)}";
            logResults = await Http.GetFromJsonAsync<PagedResult<RequestLogDto>>(url);
        }
        catch (Exception ex)
        {
            Console.Error.WriteLine($"Error loading logs: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void SetDateRangeFromSelection()
    {
        switch (selectedDateRange)
        {
            case "24h":
                startDate = DateTime.UtcNow.AddDays(-1);
                endDate = DateTime.UtcNow;
                break;
            case "7d":
                startDate = DateTime.UtcNow.AddDays(-7);
                endDate = DateTime.UtcNow;
                break;
            case "30d":
                startDate = DateTime.UtcNow.AddDays(-30);
                endDate = DateTime.UtcNow;
                break;
        }
    }

    private async Task ApplyFiltersHandler()
    {
        currentPage = 1;
        await LoadLogsAsync();
    }

    private async Task ClearFiltersHandler()
    {
        selectedVirtualKeyId = null;
        selectedModel = null;
        selectedStatusCode = null;
        selectedDateRange = "24h";
        startDate = DateTime.UtcNow.AddDays(-1);
        endDate = DateTime.UtcNow;
        currentPage = 1;
        
        await LoadLogsAsync();
    }

    private async Task GoToPageHandler(int page)
    {
        if (page < 1 || (logResults != null && page > logResults.TotalPages))
            return;
            
        currentPage = page;
        await LoadLogsAsync();
    }

    private void ViewLogByIdHandler(int logId)
    {
        if (logResults != null)
        {
            var log = logResults.Items.FirstOrDefault(l => l.Id == logId);
            if (log != null)
            {
                selectedLog = log;
                isModalOpen = true;
                StateHasChanged();
            }
        }
    }

    private void CloseLogDetailsModalHandler()
    {
        selectedLog = null;
        isModalOpen = false;
        StateHasChanged();
    }
    
    private string GetStatusColorClass(int statusCode)
    {
        return statusCode switch
        {
            >= 200 and < 300 => "success",
            >= 300 and < 400 => "info",
            >= 400 and < 500 => "warning",
            >= 500 => "danger",
            _ => "secondary"
        };
    }

    private async Task ExportToCsvHandler()
    {
        if (logResults == null || logResults.Items.Count == 0)
            return;

        var csvData = new System.Text.StringBuilder();
        
        csvData.AppendLine("ID,Timestamp,Virtual Key,Model,Type,Input Tokens,Output Tokens,Cost,Response Time (ms),Status Code,User ID,Client IP,Request Path");
        
        foreach (var log in logResults.Items)
        {
            csvData.AppendLine(
                $"{log.Id}," +
                $"{log.Timestamp:yyyy-MM-dd HH:mm:ss}," +
                $"\"{EscapeCsvField(log.VirtualKeyName)}\"," +
                $"\"{EscapeCsvField(log.ModelName)}\"," +
                $"\"{EscapeCsvField(log.RequestType)}\"," +
                $"{log.InputTokens}," +
                $"{log.OutputTokens}," +
                $"{log.Cost.ToString(CultureInfo.InvariantCulture)}," +
                $"{log.ResponseTimeMs.ToString(CultureInfo.InvariantCulture)}," +
                $"{log.StatusCode}," +
                $"\"{EscapeCsvField(log.UserId)}\"," +
                $"\"{EscapeCsvField(log.ClientIp)}\"," +
                $"\"{EscapeCsvField(log.RequestPath)}\""
            );
        }
        
        var fileName = $"request_logs_{DateTime.UtcNow:yyyyMMdd_HHmmss}.csv";
        var fileContent = csvData.ToString();
        
        await JSRuntime.InvokeVoidAsync("downloadFile", fileName, "text/csv", fileContent);
    }

    private string EscapeCsvField(string? field)
    {
        if (string.IsNullOrEmpty(field))
            return string.Empty;
            
        return field.Replace("\"", "\"\"");
    }
}