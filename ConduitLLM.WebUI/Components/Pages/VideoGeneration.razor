    private string GetVideoSource(VideoData video)
    {
        if (!string.IsNullOrEmpty(video.B64Json))
        {
            return $"data:video/mp4;base64,{video.B64Json}";
        }
        else if (!string.IsNullOrEmpty(video.Url))
        {
            return video.Url;
        }
        return "";
    }

    private async Task DownloadVideo(VideoData video)
    {
        var videoSource = GetVideoSource(video);
        if (!string.IsNullOrEmpty(videoSource))
        {
            await JSRuntime.InvokeVoidAsync("downloadVideo", videoSource, $"generated-video-{DateTime.Now:yyyyMMdd-HHmmss}.mp4");
        }
    }


    private string FormatFileSize(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:F2} {sizes[order]}";
    }

    private async Task LoadPersistedTasks()
    {
        try
        {
            var json = await JSRuntime.InvokeAsync<string?>("localStorage.getItem", "conduit-video-tasks");
            if (!string.IsNullOrEmpty(json))
            {
                var tasks = JsonSerializer.Deserialize<List<VideoGenerationTask>>(json);
                if (tasks != null)
                {
                    // Only load tasks that are still potentially active (not older than 1 hour)
                    var oneHourAgo = DateTimeOffset.UtcNow.AddHours(-1);
                    activeTasks = tasks.Where(t => 
                        t.CreatedAt > oneHourAgo && 
                        (t.Status == "pending" || t.Status == "processing" || t.Status == "queued" || 
                         (t.CompletedAt.HasValue && t.CompletedAt.Value > DateTimeOffset.UtcNow.AddSeconds(-30))))
                        .ToList();
                    
                    _logger.LogInformation("Loaded {Count} persisted video generation tasks", activeTasks.Count);
                }
            }
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error loading persisted video tasks");
        }
    }
    
    private async Task SavePersistedTasks()
    {
        try
        {
            var json = JsonSerializer.Serialize(activeTasks);
            await JSRuntime.InvokeVoidAsync("localStorage.setItem", "conduit-video-tasks", json);
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error saving persisted video tasks");
        }
    }
    

    // IServerSideSignalRListener implementation
    public async Task OnConnectionStateChanged(string hubName, ConnectionState state)
    {
        if (hubName == "video-generation")
        {
            _logger.LogInformation("Video generation hub connection state changed to {State}", state);
            
            if (state == ConnectionState.Connected)
            {
                // Re-subscribe to all active tasks
                foreach (var task in activeTasks.Where(t => t.Status == "pending" || t.Status == "processing" || t.Status == "queued"))
                {
                    await SignalRService.SubscribeToVideoTask(task.TaskId);
                }
            }
            
            await InvokeAsync(StateHasChanged);
        }
    }

    public async Task OnVideoGenerationProgress(string taskId, JsonElement progress)
    {
        try
        {
            _logger.LogInformation("Video generation progress for task {TaskId}", taskId);
            
            // Update the task
            var task = activeTasks.FirstOrDefault(t => t.TaskId == taskId);
            if (task != null)
            {
                if (progress.TryGetProperty("status", out var statusElement))
                {
                    task.Status = MapInternalStatusToUserStatus(statusElement.GetString() ?? "processing");
                }
                
                if (progress.TryGetProperty("progress", out var progressElement))
                {
                    task.Progress = progressElement.GetInt32();
                }
                
                if (progress.TryGetProperty("message", out var messageElement))
                {
                    task.StatusMessage = messageElement.GetString();
                }
                
                task.UpdatedAt = DateTimeOffset.UtcNow;
            }
            
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error handling VideoGenerationStarted event");
        }
    }


    public async Task OnVideoGenerationCompleted(string taskId, JsonElement result)
    {
        try
        {
            _logger.LogInformation("Video generation completed for task {TaskId}", taskId);

            // Update the task
            var task = activeTasks.FirstOrDefault(t => t.TaskId == taskId);
            if (task != null)
            {
                task.Status = "completed";
                task.Progress = 100;
                task.UpdatedAt = DateTimeOffset.UtcNow;
                task.CompletedAt = DateTimeOffset.UtcNow;
                
                // Extract video URL from the result
                string? videoUrl = null;
                if (result.TryGetProperty("url", out var urlElement))
                {
                    videoUrl = urlElement.GetString();
                }
                else if (result.TryGetProperty("videoUrl", out var videoUrlElement))
                {
                    videoUrl = videoUrlElement.GetString();
                }
                
                // Check if video URL is provided in the SignalR event
                if (!string.IsNullOrEmpty(videoUrl))
                {
                    var videoData = new VideoData
                    {
                        Url = videoUrl
                    };
                    generatedVideos.Add(videoData);
                    ToastService.ShowSuccess($"Video generation completed for task {task.TaskId}");
                }
                else
                {
                    // Fallback: fetch the completed video from API if not in event
                    var status = await ConduitApiClient.GetVideoGenerationStatusAsync(task.TaskId, apiKey);
                    if (status != null)
                    {
                        if (status.VideoResponse?.Data != null && status.VideoResponse.Data.Any())
                        {
                            generatedVideos.AddRange(status.VideoResponse.Data);
                        }
                        else if (!string.IsNullOrEmpty(status.Result))
                        {
                            // Parse the result JSON to get the video URL
                            try
                            {
                                var resultData = System.Text.Json.JsonSerializer.Deserialize<VideoGenerationResult>(status.Result);
                                if (!string.IsNullOrEmpty(resultData?.VideoUrl))
                                {
                                    var videoData = new VideoData
                                    {
                                        Url = resultData.VideoUrl
                                    };
                                    generatedVideos.Add(videoData);
                                }
                            }
                            catch (Exception ex)
                            {
                                _logger.LogError(ex, "Failed to parse video result for task {TaskId}", task.TaskId);
                            }
                        }
                        ToastService.ShowSuccess($"Video generation completed for task {task.TaskId}");
                    }
                }
                
                // Clean up old completed tasks
                var cutoffTime = DateTimeOffset.UtcNow.AddSeconds(-30);
                activeTasks.RemoveAll(t => 
                    (t.Status == "completed" || t.Status == "failed" || t.Status == "cancelled") 
                    && t.CompletedAt.HasValue 
                    && t.CompletedAt.Value < cutoffTime);
                
                await SavePersistedTasks();
                
                // Unsubscribe from updates
                await SignalRService.UnsubscribeFromVideoTask(taskId);
            }

            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error handling VideoGenerationCompleted event");
        }
    }

    public async Task OnVideoGenerationFailed(string taskId, string error)
    {
        try
        {

            _logger.LogError("Video generation failed for task {TaskId}: {Error}", taskId, error);

            // Update the task
            var task = activeTasks.FirstOrDefault(t => t.TaskId == taskId);
            if (task != null)
            {
                task.Status = "failed";
                task.Error = error;
                task.UpdatedAt = DateTimeOffset.UtcNow;
                
                // Unsubscribe from updates
                await SignalRService.UnsubscribeFromVideoTask(taskId);
            }

            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "Error handling VideoGenerationFailed event");
        }
    }

