    // Helper method to map internal status to user-friendly status
    private string MapInternalStatusToUserStatus(string internalStatus)
    {
        return internalStatus?.ToLowerInvariant() switch
        {
            "preparing" => "preparing",
            "queueing" => "queued",
            "pending" => "pending",
            "processing" => "processing",
            "completed" => "completed",
            "failed" => "failed",
            "cancelled" => "cancelled",
            _ => "processing"
        };
    }

