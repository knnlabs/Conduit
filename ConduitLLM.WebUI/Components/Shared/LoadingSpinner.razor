@* LoadingSpinner.razor - Consistent loading state indicator *@
<div class="text-center py-5">
    <div class="loading-spinner">
        <div class="spinner-border @SpinnerClass" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Message))
    {
        <p class="mt-3 text-muted fw-medium">@Message</p>
    }
</div>

@code {
    /// <summary>
    /// Gets or sets the loading message to display below the spinner.
    /// </summary>
    [Parameter] public string Message { get; set; } = "Loading...";

    /// <summary>
    /// Gets or sets the CSS class for the spinner (e.g., "text-primary", "text-danger").
    /// </summary>
    [Parameter] public string SpinnerClass { get; set; } = "text-primary";
}