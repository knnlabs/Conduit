@using Microsoft.Extensions.Options
@using ConduitLLM.WebUI.Options
@inject IOptions<AdminApiOptions> AdminApiOptions

@if (!AdminApiOptions.Value.UseAdminApi)
{
    <div class="deprecation-warning alert alert-danger my-2">
        <div class="d-flex">
            <div class="me-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                </svg>
            </div>
            <div>
                <h4 class="alert-heading">Deprecation Warning</h4>
                <p class="mb-0">Your system is running in <strong>Legacy Database Mode</strong>, which is scheduled for removal after October 2025.</p>
                <p class="mb-0">Please migrate to the Admin API architecture before that date.</p>
                <a href="https://github.com/ConduitLLM/Conduit/docs/admin-api-migration-guide.md" target="_blank" class="alert-link">See Migration Guide</a>
            </div>
        </div>
    </div>
}

<style>
    .deprecation-warning {
        position: relative;
        z-index: 1000;
        border-left: 5px solid #721c24;
    }
</style>