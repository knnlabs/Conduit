@* PageHeader.razor - Standardized page header component *@
<div class="row mb-4">
    <div class="col-12">
        <div class="page-header bg-gradient-primary text-white rounded-4 p-4 mb-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="h3 mb-2">
                        <i class="fa @Icon me-3"></i>@Title
                    </h1>
                    <p class="mb-0 opacity-90">
                        @Description
                    </p>
                </div>
                @if (Statistics != null)
                {
                    <div class="col-md-4 text-md-end">
                        <div class="page-header-stats">
                            @Statistics
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    /// <summary>
    /// Gets or sets the page title.
    /// </summary>
    [Parameter] public string Title { get; set; } = "";

    /// <summary>
    /// Gets or sets the page description.
    /// </summary>
    [Parameter] public string Description { get; set; } = "";

    /// <summary>
    /// Gets or sets the Font Awesome icon class (e.g., "fa-chart-pie").
    /// </summary>
    [Parameter] public string Icon { get; set; } = "fa-info-circle";

    /// <summary>
    /// Gets or sets the statistics content to display on the right side.
    /// </summary>
    [Parameter] public RenderFragment? Statistics { get; set; }
}