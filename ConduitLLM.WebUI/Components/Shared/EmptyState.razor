@* EmptyState.razor - Display when no data is available *@
<div class="empty-state text-center py-5">
    <div class="empty-icon mb-4">
        <i class="fa @Icon fa-4x text-primary @IconOpacity"></i>
    </div>
    <h4 class="fw-bold text-dark mb-3">@Title</h4>
    @if (!string.IsNullOrEmpty(Description))
    {
        <p class="text-muted mb-4 lead">
            @Description
        </p>
    }
    @if (ActionTemplate != null)
    {
        <div class="empty-state-actions">
            @ActionTemplate
        </div>
    }
    @if (AdditionalContent != null)
    {
        <div class="mt-4">
            @AdditionalContent
        </div>
    }
</div>

@code {
    /// <summary>
    /// Gets or sets the title text for the empty state.
    /// </summary>
    [Parameter] public string Title { get; set; } = "No data available";

    /// <summary>
    /// Gets or sets the description text for the empty state.
    /// </summary>
    [Parameter] public string Description { get; set; } = "";

    /// <summary>
    /// Gets or sets the Font Awesome icon class (e.g., "fa-inbox").
    /// </summary>
    [Parameter] public string Icon { get; set; } = "fa-inbox";

    /// <summary>
    /// Gets or sets the icon opacity class (e.g., "opacity-50").
    /// </summary>
    [Parameter] public string IconOpacity { get; set; } = "opacity-50";

    /// <summary>
    /// Gets or sets the action button template.
    /// </summary>
    [Parameter] public RenderFragment? ActionTemplate { get; set; }

    /// <summary>
    /// Gets or sets additional content to display below the empty state.
    /// </summary>
    [Parameter] public RenderFragment? AdditionalContent { get; set; }
}