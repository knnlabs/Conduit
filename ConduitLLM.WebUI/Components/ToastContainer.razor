@using ConduitLLM.WebUI.Models
@using ConduitLLM.WebUI.Services
@inject IToastService ToastService
@implements IDisposable

<div class="toast-container">
    @foreach (var notification in ToastService.Notifications)
    {
        <Toast Notification="notification" OnDismiss="() => DismissNotification(notification.Id)" />
    }
</div>

@code {
    protected override void OnInitialized()
    {
        ToastService.OnChange += StateHasChanged;
    }

    private void DismissNotification(Guid notificationId)
    {
        ToastService.Dismiss(notificationId);
    }

    public void Dispose()
    {
        ToastService.OnChange -= StateHasChanged;
    }
}