@using System
@using Microsoft.AspNetCore.Components.Authorization
@using ConduitLLM.WebUI.Services
@inject IFileVersionService FileVersionService
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="app.css?v=@FileVersionService.GetFileVersion("app.css")" />
    <link rel="stylesheet" href="css/design-system.css?v=@FileVersionService.GetFileVersion("css/design-system.css")" />
    <link rel="stylesheet" href="css/toast.css?v=@FileVersionService.GetFileVersion("css/toast.css")" />
    <link rel="stylesheet" href="css/modal.css?v=@FileVersionService.GetFileVersion("css/modal.css")" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css" />
    <link rel="icon" type="image/png" href="favicon.svg" />
    <HeadOutlet @rendermode="InteractiveServer" />
</head>

<body>
    <CascadingAuthenticationState>
        <Routes @rendermode="InteractiveServer" />
    </CascadingAuthenticationState>

    <div id="blazor-error-ui" data-nosnippet>
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">ðŸ—™</a>
    </div>

    <script src="_framework/blazor.web.js"></script>
    <script>
        // Configuration for JavaScript modules
        // Use external URLs for client-side access, fallback to internal URLs
        window.conduitConfig = {
            apiBaseUrl: '@(Environment.GetEnvironmentVariable("CONDUIT_API_EXTERNAL_URL") ?? Environment.GetEnvironmentVariable("CONDUIT_API_BASE_URL") ?? Configuration["CONDUIT_API_EXTERNAL_URL"] ?? Configuration["CONDUIT_API_BASE_URL"] ?? Configuration["ApiBaseUrl"] ?? "")',
            adminApiBaseUrl: '@(Environment.GetEnvironmentVariable("CONDUIT_ADMIN_API_EXTERNAL_URL") ?? Environment.GetEnvironmentVariable("CONDUIT_ADMIN_API_BASE_URL") ?? Configuration["CONDUIT_ADMIN_API_EXTERNAL_URL"] ?? Configuration["CONDUIT_ADMIN_API_BASE_URL"] ?? Configuration["AdminApi:BaseUrl"] ?? "")'
        };
        
        // If apiBaseUrl is not configured, derive it from current location
        if (!window.conduitConfig.apiBaseUrl) {
            if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
                // Local development - use localhost:5000
                window.conduitConfig.apiBaseUrl = 'http://localhost:5000';
            } else {
                // Production - use same protocol and hostname, but API port
                window.conduitConfig.apiBaseUrl = `${window.location.protocol}//${window.location.hostname}:5000`;
            }
        }
        
        // If adminApiBaseUrl is not configured, derive it from current location
        if (!window.conduitConfig.adminApiBaseUrl) {
            if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
                // Local development - use localhost:5002
                window.conduitConfig.adminApiBaseUrl = 'http://localhost:5002';
            } else {
                // Production - use same protocol and hostname, but Admin API port
                window.conduitConfig.adminApiBaseUrl = `${window.location.protocol}//${window.location.hostname}:5002`;
            }
        }
    </script>
    <script src="js/blazor-init.js?v=@FileVersionService.GetFileVersion("js/blazor-init.js")"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script src="js/site.js?v=@FileVersionService.GetFileVersion("js/site.js")"></script>
    <script src="js/charts.js?v=@FileVersionService.GetFileVersion("js/charts.js")"></script>
    <script src="js/metrics-dashboard-charts.js?v=@FileVersionService.GetFileVersion("js/metrics-dashboard-charts.js")"></script>
    <script src="js/downloadHelper.js?v=@FileVersionService.GetFileVersion("js/downloadHelper.js")"></script>
    <script src="js/audio-support.js?v=@FileVersionService.GetFileVersion("js/audio-support.js")"></script>
    <script src="js/searchable-dropdown.js?v=@FileVersionService.GetFileVersion("js/searchable-dropdown.js")"></script>
    <script src="js/security-dashboard.js?v=@FileVersionService.GetFileVersion("js/security-dashboard.js")"></script>
</body>

</html>
