{
  "name": "conduitllm-webui",
  "version": "1.0.0",
  "description": "ConduitLLM WebUI CSS tooling and build setup",
  "private": true,
  "scripts": {
    "css:lint": "stylelint \"**/*.css\" --cache --cache-location .stylelintcache",
    "css:lint:fix": "stylelint \"**/*.css\" --fix --cache --cache-location .stylelintcache",
    "css:watch": "stylelint \"**/*.css\" --watch",
    "css:build": "echo 'CSS build process - placeholder for future PostCSS/optimization'",
    "css:minify": "echo 'CSS minification - placeholder for production builds'",
    "dev": "npm run css:lint",
    "precommit": "npm run css:lint"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "@types/node-fetch": "^2.6.13",
    "node-fetch": "^3.3.2",
    "stylelint": "^16.2.1",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "css",
    "design-system",
    "bem",
    "conduitllm"
  ],
  "author": "ConduitLLM Team",
  "license": "Private",
  "dependencies": {
    "@microsoft/signalr": "^8.0.7"
  }
}
