{
  "$schema": "https://raw.githubusercontent.com/stryker-mutator/stryker-net/master/src/Stryker.Core/Stryker.Core/Options/stryker-schema.json",
  "stryker-config": {
    "project": "ConduitLLM.Core.csproj",
    "test-projects": ["ConduitLLM.Tests.csproj"],
    "solution": "Conduit.sln",
    "mutation-level": "Complete",
    "thresholds": {
      "high": 90,
      "low": 80,
      "break": 70
    },
    "mutate": [
      "**/LoggingSanitizer.cs"
    ],
    "reporters": [
      "Progress",
      "Html",
      "ClearText"
    ],
    "coverage-analysis": "perTest",
    "concurrency": 4,
    "target-framework": "net9.0",
    "verbosity": "info"
  }
}